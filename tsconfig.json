{
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata":  true,
        "noEmitOnError": true,
        "target": "ES5",
        "module": "ES2015",
        "strict": true,
        "allowJs": true,
        "noEmit": false,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "types"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}